<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToPadding="false">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        app:cardCornerRadius="18dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="14dp"
            android:baselineAligned="false"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="144dp"
                android:layout_height="match_parent"
                android:clipChildren="false"
                android:clipToPadding="false">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:id="@+id/reviewVariationImageIV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|top"
                        android:adjustViewBounds="true" />

                </androidx.cardview.widget.CardView>

            </FrameLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/reviewVariationNameTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/varela_round"
                    android:maxLines="2"
                    android:textSize="18sp"
                    tools:text="Amarena wiÅ›niowa" />

                <me.zhanghai.android.materialratingbar.MaterialRatingBar
                    android:id="@+id/reviewVariationRB"
                    style="@style/Widget.MaterialRatingBar.RatingBar.Indicator"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="-2dp"
                    android:layout_marginEnd="52dp"
                    android:layout_marginBottom="2dp"
                    android:maxWidth="28dp"
                    android:maxHeight="28dp"
                    android:minWidth="28dp"
                    android:minHeight="28dp"
                    android:progressBackgroundTint="@color/white"
                    android:progressTint="@color/primaryColor"
                    android:rating="2.5"
                    android:secondaryProgressTint="@color/primaryLightColor" />

                <TextView
                    android:id="@+id/reviewVariationTimestampTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_marginBottom="6dp"
                    android:fontFamily="@font/open_sans_light"
                    android:textColor="@color/dark"
                    android:textSize="12sp"
                    tools:text="29.02.2021" />

                <View
                    android:id="@+id/divider7"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="42dp"
                    android:layout_marginBottom="6dp"
                    android:background="@color/separator" />

                <com.redc4ke.taniechlanie.data.misc.ExpandableTextView
                    android:id="@+id/reviewVariationContentTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:fontFamily="@font/open_sans_light"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Aliquam ipsum augue, tristique vel erat quis, facilisis malesuada massa. Quisque et venenatis neque, id dictum ligula. Sed vitae congue nibh, sed dignissim dui. Sed imperdiet, mi sed feugiat iaculis, urna ligula maximus sem, a bibendum diam neque id ligula. Morbi consectetur tortor eget tempor auctor. Aliquam nec nibh risus. Vivamus mauris orci, sollicitudin nec lorem ut, interdum sagittis ex." />
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</FrameLayout>